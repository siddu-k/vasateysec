<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="bottom"
    app:cardBackgroundColor="@color/background_dark"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#2A2A2A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Guardians -->
        <LinearLayout
            android:id="@+id/navGuardians"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconGuardians"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_guardian"
                android:tint="@color/text_tertiary"
                android:contentDescription="Guardians" />

            <TextView
                android:id="@+id/labelGuardians"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardians"
                android:textSize="11sp"
                android:textColor="@color/text_tertiary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- History -->
        <LinearLayout
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconHistory"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history"
                android:tint="@color/text_tertiary"
                android:contentDescription="History" />

            <TextView
                android:id="@+id/labelHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="11sp"
                android:textColor="@color/text_tertiary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- SOS Button (Center) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sosButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/golden"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:rippleColor="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SOS"
                    android:textColor="@color/background_dark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black" />
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <!-- Ghistory (placeholder, will be used for other feature) -->
        <LinearLayout
            android:id="@+id/navGhistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconGhistory"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history"
                android:tint="@color/text_tertiary"
                android:contentDescription="G History" />

            <TextView
                android:id="@+id/labelGhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track"
                android:textSize="11sp"
                android:textColor="@color/text_tertiary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:tint="@color/text_tertiary"
                android:contentDescription="Profile" />

            <TextView
                android:id="@+id/labelProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="11sp"
                android:textColor="@color/text_tertiary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
