<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Gradient Header -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/gradient_header_golden">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_back"
                    android:tint="@color/golden"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Profile"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingBottom="120dp">

                <!-- Profile Info Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personal Information"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="20dp" />

                        <!-- Name Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/nameInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Full Name"
                            android:textColorHint="@color/text_secondary"
                            app:boxBackgroundColor="@color/card_elevated"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="@color/violet"
                            app:boxStrokeColor="@color/violet"
                            app:startIconDrawable="@drawable/ic_profile"
                            app:startIconTint="@color/violet"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/nameInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Email Input (Read-only) -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/emailInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Email"
                            android:textColorHint="@color/text_secondary"
                            app:boxBackgroundColor="@color/card_elevated"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="@color/blue"
                            app:boxStrokeColor="@color/blue"
                            app:startIconDrawable="@android:drawable/ic_dialog_email"
                            app:startIconTint="@color/blue"
                            app:endIconMode="none"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/emailInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                android:enabled="false"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Phone Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/phoneInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Phone Number"
                            android:textColorHint="@color/text_secondary"
                            app:boxBackgroundColor="@color/card_elevated"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="@color/success"
                            app:boxStrokeColor="@color/success"
                            app:startIconDrawable="@android:drawable/ic_menu_call"
                            app:startIconTint="@color/success"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phoneInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Wake Word Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/wakeWordInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Wake Word"
                            android:textColorHint="@color/text_secondary"
                            app:boxBackgroundColor="@color/card_elevated"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="@color/pink"
                            app:boxStrokeColor="@color/pink"
                            app:startIconDrawable="@drawable/ic_mic"
                            app:startIconTint="@color/pink"
                            app:helperText="Say this word to trigger emergency alert"
                            app:helperTextTextColor="@color/text_tertiary"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/wakeWordInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Save Changes"
                    android:textSize="18sp"
                    android:textColor="@color/background_dark"
                    android:layout_marginBottom="16dp"
                    app:backgroundTint="@color/golden"
                    app:cornerRadius="20dp"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconTint="@color/background_dark"
                    app:iconGravity="textStart" />

                <!-- Logout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Logout"
                    android:textSize="16sp"
                    android:textColor="@color/golden"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="16dp"
                    app:strokeColor="@color/golden"
                    app:strokeWidth="2dp"
                    app:icon="@android:drawable/ic_lock_power_off"
                    app:iconTint="@color/golden"
                    app:iconGravity="textStart"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
