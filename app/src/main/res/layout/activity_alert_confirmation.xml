<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark"
    android:gravity="center"
    android:padding="24dp">

    <!-- Warning Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_sos"
        android:tint="@color/golden"
        android:layout_marginBottom="24dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚠️ Alert Confirmation"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Message -->
    <TextView
        android:id="@+id/confirmationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A guardian has confirmed your alert.\n\nIf this is a FALSE ALARM, you have 30 seconds to cancel it."
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Timer -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#2A2A2A"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Remaining"
                android:textColor="@color/text_tertiary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="@color/golden"
                android:textSize="48sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seconds"
                android:textColor="@color/text_tertiary"
                android:textSize="14sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Password Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Enter Cancel Password"
        app:boxBackgroundColor="@color/card_background"
        app:boxStrokeColor="@color/golden"
        app:hintTextColor="@color/golden"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Cancel Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelAlertButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Cancel Alert"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="12dp"
        app:backgroundTint="#F44336"
        app:cornerRadius="20dp"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconTint="@color/text_primary"
        app:iconGravity="textStart" />

    <!-- Keep Alert Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/keepAlertButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Keep Alert Active"
        android:textSize="18sp"
        android:textColor="@color/text_secondary"
        app:backgroundTint="@color/card_elevated"
        app:cornerRadius="20dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/golden" />

    <!-- Status Message -->
    <TextView
        android:id="@+id/statusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_tertiary"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>
