<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Sleepiest-Style Dark Theme -->
    <style name="Theme.Vasateysec" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryVariant">@color/deep_navy</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/coral</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/deep_navy</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar color (transparent for gradient) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor">@color/card_background</item>
        
        <!-- Window properties -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Material Components -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <!-- Rounded Card Style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">20dp</item>
    </style>

    <!-- Rounded Button Style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="backgroundTint">@color/violet</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Transparent Toolbar -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- FAB Style for SOS Button -->
    <style name="ShapeAppearance.App.CircleFAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>