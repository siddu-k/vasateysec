<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_background"
    android:elevation="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="16dp">

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Guardians -->
        <LinearLayout
            android:id="@+id/navGuardians"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconGuardians"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_guardian"
                android:tint="@color/text_secondary"
                android:contentDescription="Guardians" />

            <TextView
                android:id="@+id/labelGuardians"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardians"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- History -->
        <LinearLayout
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconHistory"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history"
                android:tint="@color/text_secondary"
                android:contentDescription="History" />

            <TextView
                android:id="@+id/labelHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- SOS Button (Center, Elevated) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/sosButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"
                android:contentDescription="Emergency SOS"
                android:scaleType="centerInside"
                android:padding="16dp"
                app:backgroundTint="@color/coral"
                app:tint="@android:color/white"
                app:elevation="12dp"
                app:borderWidth="0dp"
                app:fabSize="normal"
                app:maxImageSize="36dp"
                app:rippleColor="@color/white"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleFAB" />
        </FrameLayout>

        <!-- Ghistory (placeholder, will be used for other feature) -->
        <LinearLayout
            android:id="@+id/navGhistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconGhistory"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history"
                android:tint="@color/text_secondary"
                android:contentDescription="G History" />

            <TextView
                android:id="@+id/labelGhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G History"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:tint="@color/text_secondary"
                android:contentDescription="Profile" />

            <TextView
                android:id="@+id/labelProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
